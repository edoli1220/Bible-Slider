block content
  section 
    h2 찾을수가 없습니다.
          
block controls
  - if (type == "bible")
    div(class="navigator")
      //input(class="version")
      div(class="navbar")
      ul
        li
          span 책:
          input(class="book", type="text", placeholder="책", value="#{book}")
          div(class="show-book-list")
        li
          span 장:
          input(class="chapter", type="text", placeholder="장", value="#{chapter}")
        li
          span 절:
          input(class="verse", type="text", placeholder="절")
      div(class="move") 이동
      
    div(class="book-list")
      ul
        li(class="era") 구약성경
        each val, key in booklist
          - if (key == 40)
            br
            br
            li(class="era") 신약성경
          li(class="book") #{val}

